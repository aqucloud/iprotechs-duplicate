{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ESNext"],                        
    "types": ["@cloudflare/workers-types"],   
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./src", "worker-configuration.d.ts"]
}
